    <% if(validacao.length > 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% for(var i = 0; i < validacao.length; i++) { %>
            <li>
              <%= validacao[i].msg %> 
            </li>
          <% } %>
        </ul>  
      </div>
    <% } %>

    <form action="/novos_equipamentos/cadastrar_novo_equipamento/salvar" method="POST">
      <h1>Cadastrar Novo Equipamento</h1>
      <div class="form-group">
        <label for="ativo">Ativo:</label>
        <input id="ativo" 
              name="ativo" 
              class="form-control form-control-sm" 
              type="text" 
              value="<%= equipamento.ativo %>"
              placeholder="Digite o ativo...">
      </div>

      <div class="form-group">
          <label for="equipamento">Equipamento:</label>
          <input id="tipo_equipamento" 
                name="tipo_equipamento" 
                class="form-control form-control-sm" 
                type="text" 
                value="<%= equipamento.tipo_equipamento %>"
                placeholder="Digite o tipo do equipamento...">
      </div>

      <div class="form-group">
          <label>Marca:</label>
          <input id="marca" 
                name="marca" 
                class="form-control form-control-sm" 
                type="text" 
                value="<%= equipamento.marca %>"
                placeholder="Digite o nome da marca...">
      </div>
      <div class="form-group">
          <label>Modelo:</label>
          <input id="modelo" 
                name="modelo" 
                class="form-control form-control-sm" 
                type="text" 
                value="<%= equipamento.modelo %>"
                placeholder="Digite o modelo...">
      </div>
      <!--
      <div class="form-group">
          <label>Quantidade:</label>
          <input class="form-control form-control-sm" type="text" placeholder="Digite a quantidade...">
      </div>
      -->

      <input class="btn btn-danger" type="submit" value="Salvar">
    </form>

